# UAV Dashboard Server - Production Environment Configuration
# Copy this file to .env and update values for your production environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3003

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS - Add your production domains (comma-separated)
ALLOWED_ORIGINS=http://localhost:3003,http://127.0.0.1:3003,https://yourdomain.com

# JWT Secret - MUST be changed in production
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-min-32-chars

# Connection limits per IP
MAX_CONNECTIONS_PER_IP=10

# Rate limiting (requests per window per IP)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# =============================================================================
# TELEMETRY CONFIGURATION
# =============================================================================

# Connection timeout (milliseconds)
CONNECTION_TIMEOUT=15000

# Monitoring interval (milliseconds)
MONITOR_INTERVAL=5000

# Data retention
MAX_HISTORY_SIZE=1000
DATA_RETENTION_HOURS=24

# Payload limits (bytes)
MAX_PAYLOAD_SIZE=1024

# Deduplication window (milliseconds)
DEDUP_WINDOW_MS=5000

# =============================================================================
# DUMMY DATA CONFIGURATION (for testing)
# =============================================================================

# Enable/disable dummy data generation
DUMMY_DATA_ENABLED=false

# Dummy data generation interval (milliseconds)
DUMMY_DATA_INTERVAL=2000

# GPS base coordinates (Jakarta, Indonesia)
GPS_BASE_LAT=-6.200000
GPS_BASE_LNG=106.816666

# GPS movement range (degrees)
GPS_MOVEMENT_RANGE=0.001

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Memory limit (MB) - alert threshold
MEMORY_LIMIT_MB=512

# CPU limit percentage - alert threshold
CPU_LIMIT_PERCENT=80

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log retention (days)
LOG_RETENTION_DAYS=7

# =============================================================================
# DATABASE CONFIGURATION (if using external storage)
# =============================================================================

# Uncomment if using external database
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=uav_dashboard
# DB_USER=uav_user
# DB_PASSWORD=secure_db_password
# DB_SSL=true

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# Monitoring webhook URL (for alerts)
# MONITORING_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert thresholds
MEMORY_ALERT_THRESHOLD=80
CPU_ALERT_THRESHOLD=85
ERROR_RATE_THRESHOLD=5

# =============================================================================
# SSL/TLS CONFIGURATION (for HTTPS)
# =============================================================================

# SSL certificate paths (uncomment for HTTPS)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem
# SSL_ENABLED=true

# =============================================================================
# REDIS CONFIGURATION (for scaling)
# =============================================================================

# Uncomment if using Redis for session management or caching
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# =============================================================================
# DEVELOPMENT ONLY SETTINGS
# =============================================================================

# Enable debug logging in development
# DEBUG=uav:*

# Hot reload in development
# NODEMON_ENABLED=true
